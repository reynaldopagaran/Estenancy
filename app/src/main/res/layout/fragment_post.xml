<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="--- ---"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeStamp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:scrollbars="vertical"
            android:text="Time Stamp"
            android:textSize="10sp"
            >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Title Post"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/distancee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/monthly_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Payment: "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/reservation_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Fee: "
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/gcashName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GCash Name: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/gcashNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GCash Number: "
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="12sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/seeMore"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/transparent"/>

            <proj.me.bitframe.ViewFrame
                android:id="@+id/view_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                app:imageScaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shouldShowComment="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/msg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text="  Message"
                app:icon="@drawable/chat"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/book_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text="  Book an Appointment"
                app:icon="@drawable/calendar"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:visibility="gone"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/map_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text="  Navigate"
                app:icon="@drawable/map"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text="  View Profile"
                app:icon="@drawable/person"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reservation_btnx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text="  Reservation Payment"
                app:iconTint="@null"
                app:icon="@drawable/gcash"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:visibility="gone"/>

    </LinearLayout>
</ScrollView>